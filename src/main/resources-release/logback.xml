<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>

	<!-- 変数の定義 -->
	<property name="LOG_DIR" value="D:/logs" />

	<!-- 標準出力設定 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{10} %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 標準出力設定 日付フォーマット、ロガー名なし -->
	<appender name="STDOUT2" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5le %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 標準エラーに出力する設定 -->
	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%t] %msg%n</pattern>
		</encoder>
		<withJasi>true</withJasi>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
		<level>ERROR</level>
		</filter>
	</appender>

	<!-- ログファイル出力の定義 -->
	<appender name="DAILY" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<append>true</append>
		<file>${LOG_DIR}/logSample.log</file>
		<!-- 閾値設定 -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>logfile.%d{yyyy-MM-dd-HH-mm}.log</FileNamePattern>
		</rollingPolicy>

		<encoder>
			<pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} [%-5level] %C : %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="sampleLogger" additivity="false" level="INFO">
		<appender-ref ref="STDOUT" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<!--<appender-ref ref="DAILY" />-->
	</root>
</configuration>